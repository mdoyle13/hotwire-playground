<%= turbo_frame_tag todo do %>
  <div id="<%= dom_id(todo) %>">
    <p>
      <span class="<%= todo.completed? ? "completed" : "" %>">
        <%= todo.content %>
      </span>
    | <%= link_to todo.completed? ? "mark incomplete" : "mark complete", toggle_todo_path(todo), data: {turbo_method: :patch} %>
    | <%= link_to 'Edit', edit_todo_path(todo) %>
    | <%= link_to 'Destroy', todo, data: { confirm: 'Are you sure?', turbo_method: :delete } %></p>
  </div>
<% end %>
