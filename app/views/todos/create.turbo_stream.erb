<%# prepend the todo to the top of the list %>
<turbo-stream action="prepend" target="todos">
  <template>
    <%= render partial: "todo", locals: {todo: @todo}, formats: [:html] %>
  </template>
</turbo-stream>

<%# clear out the form by replacing it with a blank one %>
<turbo-stream action="update" target="create-todo">
  <template>
    <%= render partial: "form", locals: {todo: Todo.new}, formats: [:html] %>
  </template>
</turbo-stream>
